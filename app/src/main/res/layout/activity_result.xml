<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Result">

    <Button
        android:id="@+id/ImageProblem"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="照片問題點"
        app:layout_constraintLeft_toLeftOf="@id/PriceTitle"
        app:layout_constraintTop_toBottomOf="@id/PriceTitle" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="書名"
        android:autoSizeTextType="uniform"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/GradeTitle"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="折舊分數:"
        android:autoSizeTextType="uniform"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Title" />

    <TextView
        android:id="@+id/Grade"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:text="500"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/GradeTitle"
        app:layout_constraintTop_toTopOf="@id/GradeTitle" />

    <TextView
        android:id="@+id/PropotionTitle"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="折舊比例:"
        android:autoSizeTextType="uniform"
        app:layout_constraintLeft_toLeftOf="@id/GradeTitle"
        app:layout_constraintTop_toBottomOf="@+id/GradeTitle" />

    <TextView
        android:id="@+id/Propotion"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="80%"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/PropotionTitle"
        app:layout_constraintTop_toBottomOf="@+id/Grade" />

    <TextView
        android:id="@+id/PriceTitle"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="建議售價:"
        android:autoSizeTextType="uniform"
        app:layout_constraintLeft_toLeftOf="@id/PropotionTitle"
        app:layout_constraintTop_toBottomOf="@+id/PropotionTitle" />

    <TextView
        android:id="@+id/Price"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="300$$"
        android:autoSizeTextType="uniform"
        app:layout_constraintLeft_toRightOf="@id/PriceTitle"
        app:layout_constraintTop_toBottomOf="@+id/Propotion" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="350dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Back to home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>