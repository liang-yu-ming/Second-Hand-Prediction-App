<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Data">

    <TextView
        android:id="@+id/data_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="選擇書籍資料:"
        android:textSize="@dimen/sp_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_50"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/data_title">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/dp_70"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextBookName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="書籍名稱:"
                android:textSize="@dimen/sp_15" />

            <EditText
                android:id="@+id/EditTextBookName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:hint="e.g. Harry potter"
                android:inputType="textPersonName"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_70"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextBookMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="書籍年齡:"
                android:textSize="@dimen/sp_15" />

            <EditText
                android:id="@+id/EditTextBookMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:hint="e.g. 2021-5-6"
                android:inputType="textPersonName"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/dp_70"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextBookClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="書籍類別:"
                android:textSize="@dimen/sp_15" />

            <Spinner
                android:id="@+id/SpinnerBookClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:entries="@array/spinner_of_data" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_40"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextBookPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="選擇照片:"
                android:textSize="@dimen/sp_15" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/ButtonPageClass1"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_40"
                        android:text="內頁*6"
                        android:textSize="@dimen/sp_10" />

                    <Button
                        android:id="@+id/ButtonPageClass2"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="書頁側面*1"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/ButtonPageClass3"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_40"
                        android:text="書背接縫*2"
                        android:textSize="@dimen/sp_10" />

                    <Button
                        android:id="@+id/ButtonPageClass4"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="封面*1"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/ButtonPageClass5"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_40"
                        android:text="書衣*1"
                        android:textSize="@dimen/sp_10" />

                    <Button
                        android:id="@+id/ButtonPageClass6"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="封底*1"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

                <Button
                    android:id="@+id/ButtonPageClass7"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="折口*2"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_40"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextBookPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原始價格:(選填)"
                android:textSize="@dimen/sp_15" />

            <EditText
                android:id="@+id/EditTextBookPrize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:ems="8"
                android:inputType="textPersonName"
                android:hint="e.g.100"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <Button
            android:id="@+id/ButtonSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_40"
            android:text="send"
            android:textSize="@dimen/sp_10"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>