<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Data">

        <TextView
            android:id="@+id/data_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="選擇書籍資料:"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="50dp" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/data_title"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextBookName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="書籍名稱:"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/EditTextBookName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:hint="e.g. Harry potter"
                    android:inputType="textPersonName"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextBookMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="書籍年齡:"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/EditTextBookMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:hint="e.g. 2021-5-6"
                    android:inputType="textPersonName"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextBookClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="書籍類別:"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/SpinnerBookClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:entries="@array/spinner_of_data" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextBookPhoto"
                    android:layout_width="93dp"
                    android:layout_height="37dp"
                    android:text="選擇照片:"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/ButtonPageClass1"
                            android:layout_width="112dp"
                            android:layout_height="39dp"
                            android:text="內頁*6"
                            android:textSize="13dp" />

                        <Button
                            android:id="@+id/ButtonPageClass2"
                            android:layout_width="112dp"
                            android:layout_height="39dp"
                            android:layout_marginLeft="10dp"
                            android:text="書頁側面*1"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/ButtonPageClass3"
                            android:layout_width="112dp"
                            android:layout_height="39dp"
                            android:text="書背接縫*2"
                            android:textSize="13dp" />

                        <Button
                            android:id="@+id/ButtonPageClass4"
                            android:layout_width="112dp"
                            android:layout_height="39dp"
                            android:layout_marginLeft="10dp"
                            android:text="封面*1"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/ButtonPageClass5"
                            android:layout_width="112dp"
                            android:layout_height="39dp"
                            android:text="書衣*1"
                            android:textSize="13dp" />

                        <Button
                            android:id="@+id/ButtonPageClass6"
                            android:layout_width="112dp"
                            android:layout_height="39dp"
                            android:layout_marginLeft="10dp"
                            android:text="封底*1"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/ButtonPageClass7"
                        android:layout_width="120dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="折口*2"
                        android:textSize="13dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextBookPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原始價格:(選填)"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/EditTextBookPrize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:ems="8"
                    android:inputType="textPersonName"
                    android:text="$"
                    android:textSize="20dp" />
            </LinearLayout>

            <Button
                android:id="@+id/ButtonSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="send" />

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>